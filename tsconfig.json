{
  "compilerOptions": {
    "target": "esnext", // Target modern JavaScript
    "module": "esnext", // Use ES modules
    "moduleResolution": "node", // Node module resolution
    "jsx": "preserve", // Enable JSX support for React 17+ (if using React)
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist", // Output directory for compiled files
    "allowSyntheticDefaultImports": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "index.ts",
    "src/**/*",
    ".next/types/**/*.ts"
, "naiveBayesClassifier.ts", "classifier.ts"  ], // Include all TypeScript files from the src directory
  "exclude": [
    "node_modules"
  ] // Exclude node_modules
}
